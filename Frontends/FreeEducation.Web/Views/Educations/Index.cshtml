@model List<EducationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                <a asp-controller="Educations" asp-action="Create" class="btn btn-primary mb-3">Eğitim oluştur</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Kurs ismi</th>
                            <th>Fiyat</th>
                            <th>Süre</th>
                            <th>Kategori</th>
                            <th>İşlemler</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td><img style="width:72px" src="@i.StockPictureUrl" class="img-thumbnail"/></td>
                                <td>@i.Name</td>
                                <td>@i.Price</td>
                                <td>@i.Category.Name</td>
                                <td>@i.Feature.Duration</td>
                                <td>
                                    <a asp-controller="Educations" asp-action="Update" asp-route-id="@i.Id" class="btn btn-success btn-sm">Güncelle</a>
                                    <a asp-controller="Educations" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger btn-sm">Sil</a>

                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>

                }
                else
                {
                    <div class="alert alert-info">
                        Kayıtlı kurs bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
</div>