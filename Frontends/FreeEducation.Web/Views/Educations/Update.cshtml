
@{
    ViewData["Title"] = "Create";
}
@model EducationUpdateInput
<div class="row">
    <div class="card-body">
        <h5 class="card-title">Eğitim güncelleme</h5>
        <form asp-controller="Educations" asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="UserId"/>
            <input type="hidden" asp-for="Picture"/>
            <div class="mb-3">
                <label class="form-label" asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categoryList">
                   
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Feature.Duration"></label>
                <textarea class="form-control" asp-for="Feature.Duration"></textarea>
                <span asp-validation-for="Feature.Duration" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="PhotoFormFile"></label>
                <input type="file" asp-for="PhotoFormFile" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Kurs Güncelle</button>
        </form>
    </div>
</div>
