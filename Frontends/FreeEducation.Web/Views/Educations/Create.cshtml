
@{
    ViewData["Title"] = "Create";
}
@model EducationCreateInput
<div class="row">
    <div class="card-body">
        <h5 class="card-title">Eğitim ekleme</h5>
        <form asp-controller="Educations" asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
            <div class="mb-3">
                <label class="form-label" asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categoryList">
                   <option value="">Kategori seçiniz</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Feature.Duration"></label>
                <textarea class="form-control" asp-for="Feature.Duration"></textarea>
                <span asp-validation-for="Feature.Duration" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="PhotoFormFile"></label>
                <input type="file" asp-for="PhotoFormFile" class="form-control"/>
            </div>
            <div>
                @{
                    var userId = ViewBag.UserId as string;
                }
                <input type="hidden" name="UserId" value="@userId" />
            </div>
            
            <button type="submit" class="btn btn-primary">Kurs Kaydet</button>
        </form>
    </div>
</div>
