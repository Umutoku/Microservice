@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<EducationViewModel>
<h2> Eğitimler</h2>
<hr/>

@if(Model.Any())
{
    @foreach(var i in Model)
    {
        count++;
        if(count==1||count%4==1)
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-2 g-4 mb-2'>")
        }
        <div class="col">
            <div class="card">
                <img src="@i.StockPictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@i.Name</h5>
                    <p class="card-text">@i.ShortDescription</p>
                    <h4 class="text-primary">@i.Price Tl</h4>
                    <div class="badge bg-primary">Kategori: @i.Category.Name</div>
                    <a class="btn btn-success" asp-controller="Home" asp-action="Detail" asp-route-id="@i.Id">Detay</a>
                </div>
            </div>
        </div>
        
        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}